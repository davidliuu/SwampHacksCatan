#include <iostream>
#include <string>
#include <vector>
#include <algorithm>
#include <stdlib.h>

using namespace std;

class Tile {
  
  public:
  
    string type;
    int value;
    vector<double> settlements;
    vector<int> roads;
    bool robber;
    bool hasPort;
    vector<int> portSpots;
    vector<string> portTypes;
    
    Tile(string material, int val) {
        
        type = material;
        value = val;
        robber = false;
        hasPort = false;
        
        for (int i = 0; i < 6; i++) {
            
            roads.push_back(0);
            
        }
        
    }
    
    void addPort(int x, string pType) {
        hasPort = true;
        portSpots.push_back(x);
        portTypes.push_back(pType);
    }
    
};

class Board {
    
    public:
    
        vector<Tile> board;
        
        Board() {
            
            vector<string> tileTypes;
            for (int i = 0; i < 4; i++) {
                if (i != 0) {
                    tileTypes.push_back("Brick");
                    tileTypes.push_back("Ore");
                }
                tileTypes.push_back("Sheep");
                tileTypes.push_back("Wheat");
                tileTypes.push_back("Wood");
                
            }
            
            vector<int> values;
            for (int i = 2; i < 13; i++) { 
                
                if (i != 7) {
                    if (i != 2 && i != 12)
                        values.push_back(i);
                    values.push_back(i);
                }
            }
            
            srand(time(0));
            
            random_shuffle(tileTypes.begin(), tileTypes.end());
            random_shuffle(values.begin(), values.end());
            
            //for (int i = 0; i < values.size(); i++) {
            //    cout << values[i] << " ";
            //}
            
            bool randUsed = false;
            int randSpot = rand() % 18;
            //cout << randSpot << endl;
            for (int i = 0; i < 19; i++) {
                
                if (i == randSpot) {
                    Tile newTile("Desert", 0);
                    board.push_back(newTile);
                    randUsed = true;
                }
                else if (!randUsed) {
                    Tile newTile(tileTypes[i], values[i]);
                    board.push_back(newTile);
                
                }
                else {
                    Tile newTile(tileTypes[i-1], values[i-1]);
                    board.push_back(newTile);
                }
               
            }
            
            setPortsRandom();
            
        }
        
        void displayInfo() {
            
            for (int i = 0; i < board.size(); i++) {
                
                cout << "Tile " << i << ": " << board[i].type << " " << board[i].value << endl;
                
                int count = 0;
                
                for (int q = 0; q < 6; q++) {
                    
                    if (board[i].settlements[q] != 0)
                        count++;
                    
                }
                
                //cout << "Tile " << i << " has " << count << " spots available" << endl;
                
                for (int q = 0; q < 6; q++) {
                    
                    //cout << "Tile " << i << "Spot " << q << " strength is " << board[i].settlements[q] << endl;
                    
                }
                
            }
            
        }
        
        double scarcityTerrain(string ttype) {
          double result = 0;
            for (int i = 0; i < 19; i++) {
                if (board[i].type == "Ore" && ttype == "Ore") {
                    result += valueStrength(board[i].value);
                }
                if (board[i].type == "Brick" && ttype == "Brick") {
                    result += valueStrength(board[i].value);
                }
                if (board[i].type == "Wheat" && ttype == "Wheat") {
                    result += valueStrength(board[i].value);
                }
                if (board[i].type == "Wood" && ttype == "Wood") {
                    result += valueStrength(board[i].value);
                }
                if (board[i].type == "Sheep" && ttype == "Sheep") {
                    result += valueStrength(board[i].value);
                }
            }
            return result;
        }

        double scarcityStrength(string ttype) {
                    
                    double str = 0;
                    double num = scarcityTerrain(ttype);
                    str += (12-num)/10.66;
                    str /= 1.7;
                    return str;
        }
        
        double portStrength(string ptype, int tileNum) {
                if(ptype.compare("Three") == 0) {
                    return 1.25;
                }
                if(ptype.compare(board[tileNum].type) == 0) {
                    return 1.15 - scarcityStrength(ptype);
                }
                else {
                    return 0.9 - scarcityStrength(ptype);
                }
        }
        
        void setPortsUser() {
            for(int i = 1; i < 10; i++) {
                string pType;
                cout << "What resource type is Port " << i << "?" << endl;
                cin >> pType;
                
                if(i == 1) {
                    board[0].addPort(0, pType);
                    board[0].addPort(5, pType);
                }
                else if(i == 2) {
                    board[1].addPort(0, pType);
                    board[1].addPort(1, pType);
                    board[2].addPort(5, pType);
                }
                else if(i == 3) {
                    board[2].addPort(2, pType);
                    board[6].addPort(0, pType);
                    board[6].addPort(1, pType);
                }
                else if(i == 4) {
                    board[11].addPort(1, pType);
                    board[11].addPort(2, pType);
                }
                else if(i == 5) {
                    board[15].addPort(2, pType);
                    board[15].addPort(3, pType);
                    board[18].addPort(1, pType);
                }
                else if(i == 6) {
                    board[18].addPort(4, pType);
                    board[17].addPort(2, pType);
                    board[17].addPort(3, pType);
                }
                else if(i == 7) {
                    board[16].addPort(3, pType);
                    board[16].addPort(4, pType);
                }
                else if(i == 8) {
                    board[7].addPort(3, pType);
                    board[12].addPort(4, pType);
                    board[12].addPort(5, pType);
                }
                else if(i == 9) {
                    board[7].addPort(0, pType);
                    board[3].addPort(4, pType);
                    board[3].addPort(5, pType);
                }
            }
        }
        
        void setPortsRandom() {
            vector<string> numPortTypes;
            
            for(int i = 0; i < 4; i++) {
                numPortTypes.push_back("Three");
            }
            numPortTypes.push_back("Wood");
            numPortTypes.push_back("Ore");
            numPortTypes.push_back("Brick");
            numPortTypes.push_back("Wheat");
            numPortTypes.push_back("Sheep");
            
            random_shuffle(numPortTypes.begin(), numPortTypes.end());
            
            for(int i = 0; i < 9; i++) {
                string pType = numPortTypes.at(i);
                
                if(i == 0) {
                    board[0].addPort(0, pType);
                    board[0].addPort(5, pType);
                }
                else if(i == 1) {
                    board[1].addPort(0, pType);
                    board[1].addPort(1, pType);
                    board[2].addPort(5, pType);
                }
                else if(i == 2) {
                    board[2].addPort(2, pType);
                    board[6].addPort(0, pType);
                    board[6].addPort(1, pType);
                }
                else if(i == 3) {
                    board[11].addPort(1, pType);
                    board[11].addPort(2, pType);
                }
                else if(i == 4) {
                    board[15].addPort(2, pType);
                    board[15].addPort(3, pType);
                    board[18].addPort(1, pType);
                }
                else if(i == 5) {
                    board[18].addPort(4, pType);
                    board[17].addPort(2, pType);
                    board[17].addPort(3, pType);
                }
                else if(i == 6) {
                    board[16].addPort(3, pType);
                    board[16].addPort(4, pType);
                }
                else if(i == 7) {
                    board[7].addPort(3, pType);
                    board[12].addPort(4, pType);
                    board[12].addPort(5, pType);
                }
                else if(i == 8) {
                    board[7].addPort(0, pType);
                    board[3].addPort(4, pType);
                    board[3].addPort(5, pType);
                }
            }
            
            
        }
        
        void printPorts() {
            for(int i = 0; i < board.size(); i++) {
                if(board[i].hasPort) {
                    for(int j = 0; j < board[i].portSpots.size(); j++) {
                        cout << "Tile " << i << " has a " << board[i].portTypes.at(j) << " port at spot " << board[i].portSpots.at(j) << endl;
                        //cout << "Tile " << i << " has a port at spot " << board[i].portSpots.at(j) << endl;
                    }
                }
            }
        }
        
